.logo {
  height: 101rpx;
  width: 346rpx;
  display: block;
  margin: 108rpx auto 55px;
}
.icon {
  height: 41rpx;
  width: 30rpx;
  margin-bottom: 23rpx;
  margin-right: 30rpx;
}
.checkbox {
  font-size: 28rpx;
  color: #464646;
}
.agreement {
  color: #238DE5;
}

.form {
  padding: 0 50rpx;
  display: block;
}

.info {
  position: relative;
  display: flex;
  padding: 10rpx 0;
  border-bottom: 1rpx solid #aaa;
  margin-bottom: 49rpx;
}

.codeArea {
  justify-content: space-between;
}

.inputCode {
  display: flex;
  width: 60%;
}

.codeBtn {
  position: relative;
  font-size: 28rpx;
  line-height: 60rpx;
  padding: 0 20rpx;
  border-radius: 4rpx;
  bottom: 15rpx;
  right: 0px;
}

.getCode {
  color: #238DE5;
  border: 1rpx solid #238DE5;
}

.getCodeing {
  color: #FFF;
  border: 0;
  width: 220rpx;
  background-color: #D0DDE8;
}

.footer {
  position: absolute;
  bottom: 51rpx;
  display: block;
  height: 44rpx;
  width: 100%;
  text-align:center;
}

.btn {
  background-color: #D2D7DB;
  border-radius: 10rpx;
  line-height: 84rpx;
  text-align: center;
  font-size: 38rpx;
  color: #FFF;
  width: 690rpx;
  margin: 133rpx auto 0;
}

.submitBtn {
  background: #238DE5;
}

.placeholder {
  font-size: 34rpx;
  color: #CCCCCC;
}

checkbox .wx-checkbox-input{
  border-radius: 50%;
  border: 1rpx solid #aaa;
  width: 30rpx;
  height: 30rpx;
}
checkbox .wx-checkbox-input.wx-checkbox-input-checked{
  border: none;
  background: #238DE5;
  border: 1rpx solid #238DE5;
}
checkbox .wx-checkbox-input.wx-checkbox-input-checked::before{
  border-radius: 50%;
  width: 30rpx;
  height: 30rpx;
  line-height: 30rpx;
  text-align: center;
  font-size:20rpx;
  color:#fff;
  background: transparent;
  transform:translate(-50%, -50%) scale(1);
  -webkit-transform:translate(-50%, -50%) scale(1);
}