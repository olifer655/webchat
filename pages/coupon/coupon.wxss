.coupon {
  padding: 30rpx;
}
.couponIterm {
  background-color: #fff;
  border-radius: 20px;
  box-shadow: 0 2px 10px 0 rgba(0,0,0,0.05);
  display: flex;
  margin-bottom: 30rpx;
}
.info {
  display: flex;
  flex-direction: column;
  margin: 21rpx 24rpx 0 25rpx;
}
.intruduce {
  border-bottom: 2rpx dashed #e3e3e3;
  width: 431rpx;
}
.couponInfo {
  color: #464646;
  margin-bottom: 15rpx;
  margin-left: 5rpx;
}
.yuan {
  font-size: 34rpx;
  color: #FF7700;
  font-weight: 500;
}
.price {
  font-weight: 900;
  font-size: 70rpx;
  color: #FF7700;
  padding: 0 20rpx 0 10rpx;
}
.ps {
  font-size: 26rpx;
  color: #464646;
  margin-left: 5rpx;
  margin-bottom: 15rpx;
}
.data {
  color: #999999;
  font-size: 22rpx;
  padding: 14rpx 0 0 5rpx;
  
}
.line {
  height: 252rpx;
  width: 18rpx;
}
.handle {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-left: 20rpx;
  width: 150rpx;
}
.toHandle {
  padding: 0 19rpx;
  line-height: 68rpx;
  font-size: 28rpx;
  color: #35C8D0;
  border: 2rpx solid #35C8D0;
  border-radius: 50rpx;
}
.due {
  color: #909090;
  border: 0;
}