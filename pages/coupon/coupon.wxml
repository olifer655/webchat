  <view class="couponIterm">
    <view class="info">
      <view class="intruduce">
        <view class="couponInfo">
          <text class="yuan">¥</text>
          <text class="price">30</text>
          <text class="name">优惠券</text>
        </view>
        <view class="ps">一次性抵用，不可叠加、不找零</view>
      </view>
      <view class="data">
        有效期至2018-04-15
      </view>
    </view>
