.circle {
  width: 40rpx;
  height: 40rpx;
  position: relative;
  margin-left: 40rpx;
}
.item {
  width: 14rpx;
  height: 40rpx;
  border-radius: 7rpx;
  overflow: hidden;
  position: absolute;
  left: 0;
  top: 0;
}
.item:before {
  content: '';
  display: block;
  margin: 0 auto;
  width: 15%;
  height: 15%;
  background-color: #333;
  border-radius: 100%;
}
.item2 { transform: rotate(30deg);}
.item3 { transform: rotate(60deg);}
.item4 { transform: rotate(90deg);}
.item5 { transform: rotate(120deg);}
.item6 { transform: rotate(150deg);}
.item7 { transform: rotate(180deg);}
.item8 { transform: rotate(210deg);}
.item9 { transform: rotate(240deg);}
.item10 { transform: rotate(270deg);}
.item11 { transform: rotate(300deg);}
.item12 { transform: rotate(330deg);}

@-webkit-keyframes itemFadeDelay {
  0%, 49%, 100% { opacity: 0; }
  50% { opacity: .8; }
}
@keyframes itemFadeDelay {
  0%, 49%, 100% { opacity: 0; }
  50% { opacity: .8; } 
}
.item:before {
  animation: itemFadeDelay 1.2s infinite ease-in-out both;
}

.item2:before {animation-delay: -1.1s; }
.item3:before { animation-delay: -1s; }
.item4:before { animation-delay: -0.9s; }
.item5:before {animation-delay: -0.8s; }
.item6:before { animation-delay: -0.7s; }
.item7:before { animation-delay: -0.6s; }
.item8:before {animation-delay: -0.5s; }
.item9:before { animation-delay: -0.4s; }
.item10:before { animation-delay: -0.3s; }
.item11:before {animation-delay: -0.2s; }
.item12:before { animation-delay: -0.1s; }

