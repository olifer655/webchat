<image class="banner" src="/images/certification.png" mode="aspectFit" background-size="cover"></image>
<form class="table" bindsubmit="formSubmit">
  <view class="tr2 flex">
    <text class="formItemKey">姓名</text>
    <input class="formItemValue" name="phone" placeholder="请输入姓名" placeholder-class="placeholder" value="{{name}}"/>
  </view>
  
  <view class="tr2 flex">
    <text class="formItemKey">身份证</text>
    <input class="formItemValue" name="phone" bindinput="getMobile" type="number" placeholder="请输入身份证号" placeholder-class="placeholder" value="{{idcard}}"/>
  </view>
  <view class="tr2 flex">
    <text class="formItemKey">手机号</text>
    <text class="formItemValue">186****7678</text>
  </view>
  <checkbox-group class="checkGroup" bindchange="getIsAgree" name="checkbox">
    <label class="checkbox">
      <checkbox checked="{{isAgree}}" value="{{!isAgree ? '1' : '0'}}"/>
      我已阅读并同意
      <text class="agreement">《平台服务协议》</text>
    </label>
  </checkbox-group>
  <button class="{{canISubmit ? 'submitBtn btn' : 'btn'}}" formType="submit">提交认证</button>
</form>