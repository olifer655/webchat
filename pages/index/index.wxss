swiper {
  height: 92vh;
}
scroll-view {
  display: block;
  widows: 100%;
}
.swiperTab {
  display: flex;
  background-color: #fff;
  font-size: 28rpx;
  border-bottom: 1rpx solid #E5E5E5;
  border-top: 1rpx solid #E5E5E5;
  position: static;
  top:0;
  left:0;
  right: 0;
  z-index:99;
}
.title {
  font-size: 26rpx;
  color: #999999;
  margin: 30rpx 30rpx 16rpx 30rpx;
}
.swiperTabIterm {
  color: #464646;
  opacity: 0.9;
  width: 50%;
  text-align: center;
  padding: 27rpx 0 20rpx;
  margin-left: 100rpx;
  margin-right: 87rpx;
}
.on {
  color: #00A2FF;
  border-bottom: 3rpx solid #009BFF;
}
.empty {
  height: 90vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #ccc;
}
.emptyImage {
  height: 150rpx;
  width: 127rpx;
}
.emptyText {
  font-size: 28rpx;
  color: #999999;
  margin-top: 40rpx;
}
swiper-item {
  overflow: auto;
}
.loading {
  display: flex;
  margin: 40rpx auto 80rpx;
  color: #999;
  font-size: 28rpx;
  justify-content:center;
}